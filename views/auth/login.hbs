<h3>Sign In:</h3>
<form action="/signin" method="post">
    <input type="text" placeholder="Username" name="username">
    <input type="password" placeholder="password" name="password">
    <input type="submit" value="Submit">
    <a href="/signup">Sign up</a>
    {{#if errorMessage}}
        <p>{{errorMessage}}</p>
    {{/if}}
</form>
